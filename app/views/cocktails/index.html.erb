<div class="banner" style="">
  <div class="banner-content">
    <h1>Coctaile Heaven</h1>
    <form class="form-inline my-2 my-lg-0">
      <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
      <button class="btn btn-primary my-2 my-sm-0 search-btn" type="submit">Search</button>
    </form>

    <p><span id="banner-typed-text"></span></p>
    <a href="#starts" class="btn btn-primary btn-lg">Find a cocktail</a>
  </div>
</div>


<div class="container text-center" id="starts">
  <h1></h1>
  <p class="info-resto"><%= link_to 'New cocktail', new_cocktail_path, class: 'btn btn-warning' %>
  <div class="wrapper">
    <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4">
        <div class="cocktail-card">
          <h4><%= link_to cocktail.name, cocktail_path(cocktail.id) %></h4>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>


